---
import Sidebar from "../components/dashboard/Sidebar.astro";
import ThemeToggle from "../components/ThemeToggle.astro";
import "../styles/index.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Sistema de Registro de Ventas JLC" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | JLC Ventas</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="dashboard-layout">
      <Sidebar />
      <main class="dashboard-content">
        <header class="dashboard-header">
          <h1 class="page-title">{title}</h1>
          <ThemeToggle />
        </header>
        <slot />
      </main>
    </div>
  </body>
</html>

<style>
  .dashboard-layout {
    display: flex;
    min-height: 100vh;
    background-color: var(--color-bg-main);
    transition: background-color 0.3s ease;
  }

  .dashboard-content {
    flex-grow: 1;
    padding: 2rem;
    overflow-y: auto;
  }

  .dashboard-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }
  .page-title {
    font-size: 1.875rem;
    font-weight: 700;
    color: var(--color-text-main);
  }

  @media (max-width: 768px) {
    .dashboard-layout {
      flex-direction: column;
    }
    .dashboard-content {
      padding: 1rem;
    }
    .page-title {
      font-size: 1.5rem;
    }
  }
</style>

<script is:inline>
  // ðŸ”’ AUTHENTICATION GUARD - Protege rutas del dashboard
  (function () {
    const token = localStorage.getItem("token");
    const userStr = localStorage.getItem("user");

    if (!token || !userStr) {
      // Sin token = redirigir al login
      window.location.href = "/login";
      return;
    }

    try {
      const user = JSON.parse(userStr);
      // Verificar que el objeto user tenga datos vÃ¡lidos
      if (!user.id || !user.nombre) {
        throw new Error("Invalid user data");
      }
    } catch (e) {
      console.error("Error parsing user data:", e);
      localStorage.clear();
      window.location.href = "/login";
    }
  })();
</script>
