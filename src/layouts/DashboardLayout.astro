---
import Sidebar from "../components/dashboard/Sidebar.astro";
import HamburgerMenu from "../components/dashboard/HamburgerMenu.astro";
import ResponsiveSidebar from "../components/dashboard/ResponsiveSidebar.astro";
import ThemeToggle from "../components/ThemeToggle.astro";
import Logo from "../components/Logo.astro";
import "../styles/index.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Sistema de Registro de Ventas JLC" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | JLC Ventas</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <!-- SheetJS for Excel export -->
    <script
      src="https://cdn.sheetjs.com/xlsx-latest/package/dist/xlsx.full.min.js"
    ></script>
  </head>
  <body>
    <div class="dashboard-layout">
      <!-- Sidebar principal (visible en desktop) -->
      <div class="sidebar-container">
        <Sidebar />
      </div>

      <!-- Sidebar para m贸viles -->
      <ResponsiveSidebar />

      <main class="dashboard-content">
        <header class="dashboard-header">
          <div class="header-left">
            <HamburgerMenu />
            <h1 class="page-title">{title}</h1>
          </div>
          <ThemeToggle />
        </header>
        <slot />
      </main>
    </div>
  </body>
</html>

<style>
  .dashboard-layout {
    display: flex;
    min-height: 100vh;
    background-color: var(--color-bg-main);
    transition: background-color 0.3s ease;
  }

  .sidebar-container {
    display: none; /* Oculto en m贸vil por defecto */
  }

  .dashboard-content {
    flex-grow: 1;
    padding: 1rem; /* Padding m贸vil por defecto */
    overflow-y: auto;
  }

  .dashboard-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .header-left {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .page-title {
    font-size: 1.5rem; /* T铆tulo m贸vil por defecto */
    font-weight: 700;
    color: var(--color-text-main);
  }

  /* Estilos para Desktop */
  @media (min-width: 769px) {
    .sidebar-container {
      display: flex; /* Visible en desktop */
    }
    .dashboard-content {
      padding: 2rem;
    }
    .page-title {
      font-size: 1.875rem;
    }
  }
</style>

<script is:inline>
  //  AUTHENTICATION GUARD - Protege rutas del dashboard
  (function () {
    const token = localStorage.getItem("token");
    const userStr = localStorage.getItem("user");

    if (!token || !userStr) {
      // Sin token = redirigir al login
      window.location.href = "/login";
      return;
    }

    try {
      const user = JSON.parse(userStr);
      // Verificar que el objeto user tenga datos v谩lidos
      if (!user.id || !user.nombre) {
        throw new Error("Invalid user data");
      }
    } catch (e) {
      console.error("Error parsing user data:", e);
      localStorage.clear();
      window.location.href = "/login";
    }
  })();
  // --- L贸gica del Men煤 Responsive ---
  document.addEventListener("DOMContentLoaded", function () {
    var hamburger = document.getElementById("hamburger-menu");
    var responsiveSidebar = document.getElementById("responsive-sidebar");
    var backdrop = document.getElementById("responsive-sidebar-backdrop");
    var closeButton = document.getElementById("close-sidebar");

    var openMenu = function () {
      responsiveSidebar.classList.add("is-open");
      backdrop.classList.add("is-open");
      hamburger.setAttribute("aria-expanded", "true");
    };

    var closeMenu = function () {
      responsiveSidebar.classList.remove("is-open");
      backdrop.classList.remove("is-open");
      hamburger.setAttribute("aria-expanded", "false");
    };

    if (hamburger && responsiveSidebar && backdrop && closeButton) {
      hamburger.addEventListener("click", openMenu);
      closeButton.addEventListener("click", closeMenu);
      backdrop.addEventListener("click", closeMenu);
    }

    // Cerrar con la tecla Escape
    document.addEventListener("keydown", function (e) {
      if (
        e.key === "Escape" &&
        responsiveSidebar.classList.contains("is-open")
      ) {
        closeMenu();
      }
    });
  });

  // Auto-Logout por Inactividad (7 minutos)
  (function () {
    var INACTIVITY_TIMEOUT = 7 * 60 * 1000; // 7 minutos en milisegundos
    var inactivityTimer;

    function resetInactivityTimer() {
      // Limpiar timer anterior
      if (inactivityTimer) {
        clearTimeout(inactivityTimer);
      }

      // Crear nuevo timer
      inactivityTimer = setTimeout(function () {
        logout();
      }, INACTIVITY_TIMEOUT);
    }

    function logout() {
      // Limpiar localStorage
      localStorage.clear();

      // Redirigir a la p谩gina de inicio
      window.location.href = "/";
    }

    // Eventos que indican actividad del usuario
    var activityEvents = [
      "mousedown",
      "mousemove",
      "keypress",
      "scroll",
      "touchstart",
      "click",
    ];

    // Agregar listeners para detectar actividad
    for (var i = 0; i < activityEvents.length; i++) {
      document.addEventListener(activityEvents[i], resetInactivityTimer, true);
    }

    // Iniciar el timer cuando carga la p谩gina
    resetInactivityTimer();

    console.log(" Auto-logout activado: 7 minutos de inactividad");
  })();
</script>
