import Logo from "../Logo.astro";
import Avatar from "../Avatar.astro";
---

<div id="responsive-sidebar-backdrop" class="sidebar-backdrop"></div>
<aside id="responsive-sidebar" class="responsive-sidebar">
  <div class="sidebar-header">
    <Logo width="5em" margin="0.1rem" color="primary" />
    <button id="close-sidebar" aria-label="Cerrar menú" class="close-button">&times;</button>
  </div>

  <div class="user-profile">
    <a href="/dashboard/perfil" class="avatar-link">
      <Avatar size="md" />
    </a>
    <a href="/dashboard/perfil" class="user-info">
      <span class="user-name">Nombre Prueba</span>
      <span class="user-role">Asesor</span>
