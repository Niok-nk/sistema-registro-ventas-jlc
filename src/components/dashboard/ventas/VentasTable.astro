---
interface Props {
  tableId?: string;
  tbodyId?: string;
}

const { tableId = "sales-table", tbodyId = "sales-tbody" } = Astro.props;
---

<table class="sales-table" id={tableId} style="display: none;">
  <thead>
    <tr>
      <th>ID</th>
      <th>Fecha</th>
      <th>N° Factura</th>
      <th>Producto</th>
      <th>N° Serie</th>
      <th>Asesor</th>
      <th>Distribuidor</th>
      <th>Estado</th>
      <th>Foto</th>
      <th class="admin-only-column" style="display: none;">Acciones</th>
    </tr>
  </thead>
  <tbody id={tbodyId}>
    <!-- Contenido dinámico -->
  </tbody>
</table>

<style>
  .sales-table {
    width: 100%;
    border-collapse: collapse;
    text-align: left;
    font-size: 0.9rem;
  }

  .sales-table th,
  .sales-table td {
    padding: 0.875rem 0.4rem;
    border-bottom: 1px solid var(--color-border);
  }

  .sales-table thead {
    background-color: var(--color-bg-card);
  }

  .sales-table th {
    text-transform: uppercase;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-text-secondary);
    letter-spacing: 0.05em;
  }

  .sales-table tbody tr:hover {
    background-color: var(--color-bg-card);
  }

  :global(#sales-tbody td) {
    padding: 0rem 0.4rem;
    font-size: 0.65rem;
  }

  /* Status Badge */
  :global(.status-badge) {
    display: inline-block;
    padding: 0.25em 0.6em;
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: 9999px;
  }

  :global(.status-aprobada) {
    background-color: rgba(56, 161, 105, 0.2);
    color: #68d391;
  }

  :global(.status-pendiente) {
    background-color: rgba(221, 107, 32, 0.2);
    color: #f6ad55;
  }

  :global(.status-rechazada) {
    background-color: rgba(229, 62, 62, 0.2);
    color: #fc8181;
  }

  /* Photo button */
  :global(.btn-view-photo) {
    background: none;
    border: 1px solid var(--color-accent);
    color: var(--color-accent);
    padding: 0.5rem;
    border-radius: var(--radius-md);
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s;
  }

  :global(.btn-view-photo:hover) {
    background: rgba(66, 153, 225, 0.1);
  }

  /* Status Selector for Admin */
  :global(.status-selector) {
    padding: 0.4rem 0.6rem;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    background: var(--color-bg-cardb);
    color: var(--color-text-main);
    font-size: 0.75rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
  }

  :global(.status-selector:hover) {
    border-color: var(--color-accent);
  }

  :global(.status-selector:focus) {
    outline: none;
    border-color: var(--color-accent);
    box-shadow: 0 0 0 2px rgba(66, 153, 225, 0.1);
  }

  /* Colores dinámicos según estado */

  :global(.status-selector[data-current-status="aprobada"]) {
    background-color: rgba(56, 161, 105, 0.15);
    border-color: rgba(56, 161, 105, 0.4);
    color: #68d391;
  }

  :global(.status-selector[data-current-status="rechazada"]) {
    background-color: rgba(229, 62, 62, 0.15);
    border-color: rgba(229, 62, 62, 0.4);
    color: #fc8181;
  }

  /* Clickable User Cells */
  :global(.asesor-cell) {
    padding: 0.2rem 0.4rem !important;
    display: flex;
    flex-direction: column;
  }

  :global(.clickable-user) {
    cursor: pointer;
    color: var(--color-accent);
    transition: all 0.2s;
    padding: 0.25rem 0;
    border-radius: var(--radius-sm);
    display: inline-block;
  }

  :global(.clickable-user:hover) {
    text-decoration: underline;
    color: var(--color-accent-hover);
    background-color: rgba(66, 153, 225, 0.05);
    padding: 0.25rem 0.5rem;
  }

  /* Delete button */
  :global(.btn-delete-sale) {
    background: none;
    border: 1px solid #e53e3e;
    color: #e53e3e;
    padding: 0.4rem;
    border-radius: var(--radius-md);
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s;
  }

  :global(.btn-delete-sale:hover) {
    background: rgba(229, 62, 62, 0.1);
    transform: scale(1.05);
  }

  :global(.admin-only-column) {
    width: 60px;
    text-align: center;
  }
</style>
