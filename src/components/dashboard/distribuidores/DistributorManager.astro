---
import Button from "../../Button.astro";
import Card from "../../Card.astro";
---

<div id="distributor-manager-container">
  <Card title="Gestión de Distribuidores">
    <!-- Header & Controls -->
    <div class="controls-section">
      <div class="search-wrapper">
        <svg class="search-icon" viewBox="0 0 20 20" fill="currentColor">
          <path
            fill-rule="evenodd"
            d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z"
            clip-rule="evenodd"></path>
        </svg>
        <input
          type="text"
          id="search-input"
          placeholder="Buscar por nombre o NIT..."
          class="search-input"
        />
      </div>
      <Button id="btn-add-new">
        <svg viewBox="0 0 20 20" fill="currentColor" class="btn-icon">
          <path
            fill-rule="evenodd"
            d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z"
            clip-rule="evenodd"></path>
        </svg>
        Nuevo Distribuidor
      </Button>
    </div>

    <!-- Loading State -->
    <div id="loading-state" class="state-message">
      <div class="spinner"></div>
      <p>Cargando distribuidores...</p>
    </div>

    <!-- Empty State -->
    <div id="empty-state" class="state-message" style="display: none;">
      <p>No se encontraron distribuidores</p>
    </div>

    <!-- Grid List -->
    <div
      id="distributors-grid"
      class="distributors-grid"
      style="display: none;"
    >
      <!-- Cards injected via JS -->
    </div>
  </Card>

  <!-- Modal Form -->
  <div id="modal-overlay" class="popup-overlay">
    <div class="popup-container">
      <div class="popup-content">
        <!-- Close Button -->
        <button id="btn-close-modal" class="popup-close" aria-label="Cerrar">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>

        <div class="popup-header">
          <h2 id="modal-title">Nuevo Distribuidor</h2>
        </div>

        <div class="popup-body">
          <form id="distributor-form">
            <input type="hidden" name="id" id="field-id" />

            <div class="form-group">
              <label for="field-nit">NIT</label>
              <input
                type="text"
                id="field-nit"
                name="nit"
                required
                placeholder="Ej: 900123456"
              />
            </div>

            <div class="form-group">
              <label for="field-nombre">Nombre del Distribuidor</label>
              <input
                type="text"
                id="field-nombre"
                name="nombre"
                required
                placeholder="Ej: Distribuidora JLC S.A.S"
              />
            </div>

            <div class="modal-actions">
              <Button variant="outline" type="button" id="btn-cancel"
                >Cancelar</Button
              >
              <Button type="submit">Guardar</Button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Layout & Controls */
  .controls-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .search-wrapper {
    position: relative;
    flex-grow: 1;
    max-width: 400px;
  }

  .search-icon {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    width: 1.25rem;
    height: 1.25rem;
    color: var(--color-text-secondary);
  }

  .search-input {
    width: 100%;
    padding: 0.75rem 1rem 0.75rem 2.75rem;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    background: var(--color-bg-card);
    color: var(--color-text-main);
  }

  .btn-icon {
    width: 1.25rem;
    height: 1.25rem;
  }

  /* Grid Layout */
  .distributors-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  /* Card Styles */
  :global(.distributor-card) {
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    transition:
      transform 0.2s,
      box-shadow 0.2s;
  }

  :global(.distributor-card:hover) {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    border-color: var(--color-accent);
  }

  :global(.card-header) {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  :global(.distributor-name) {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text-main);
    margin: 0;
  }

  :global(.distributor-nit) {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    margin-top: 0.25rem;
  }

  :global(.card-footer) {
    margin-top: auto;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  :global(.date-info) {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
  }

  :global(.card-actions) {
    display: flex;
    gap: 0.5rem;
  }

  :global(.action-btn) {
    padding: 0.4rem;
    border-radius: var(--radius-sm);
    border: 1px solid var(--color-border);
    background: transparent;
    color: var(--color-text-secondary);
    cursor: pointer;
    transition: all 0.2s;
  }

  :global(.action-btn:hover) {
    color: var(--color-accent);
    border-color: var(--color-accent);
  }

  :global(.action-btn.delete:hover) {
    color: #e53e3e;
    border-color: #e53e3e;
  }

  /* Popup Overlay */
  .popup-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.75);
    backdrop-filter: blur(2px);
    z-index: 9999;
    display: none;
    animation: fadeIn 0.2s ease-out;
  }

  .popup-overlay.show {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  /* Popup Container */
  .popup-container {
    width: 100%;
    max-width: 500px;
    animation: slideUp 0.3s ease-out;
  }

  @keyframes slideUp {
    from {
      transform: translateY(20px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  /* Popup Content */
  .popup-content {
    background-color: var(--color-bg-main);
    border-radius: var(--radius-lg);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.3);
    border: 1px solid var(--color-border);
    position: relative;
    overflow: hidden;
  }

  /* Close Button */
  .popup-close {
    position: absolute;
    top: 1rem;
    right: 1rem;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    border: none;
    background-color: transparent;
    color: var(--color-text-secondary);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s;
    z-index: 10;
  }

  .popup-close:hover {
    background-color: var(--color-border);
    color: var(--color-text-main);
    transform: rotate(90deg);
  }

  .popup-close svg {
    width: 1.5rem;
    height: 1.5rem;
  }

  /* Popup Header */
  .popup-header {
    padding: 1.5rem 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  .popup-header h2 {
    margin: 0;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text-main);
  }

  .popup-body {
    padding: 2rem;
  }

  .form-group {
    margin-bottom: 1.25rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: var(--color-text-main);
  }

  .form-group input {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    background: var(--color-bg-input);
    color: var(--color-text-main);
  }

  .modal-actions {
    display: flex;
    justify-content: flex-end;
    gap: 1rem;
    margin-top: 2rem;
  }

  /* States */
  .state-message {
    padding: 3rem;
    text-align: center;
    color: var(--color-text-secondary);
  }

  .spinner {
    border: 3px solid var(--color-border);
    border-top-color: var(--color-accent);
    border-radius: 50%;
    width: 40px;
    height: 40px;
    animation: spin 1s linear infinite;
    margin: 0 auto 1rem;
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }
</style>

<script is:inline>
  (function () {
    const API_BASE =
      window.location.hostname === "localhost" ||
      window.location.hostname === "127.0.0.1"
        ? "http://localhost:8000"
        : window.location.origin + "/api";

    const token = localStorage.getItem("token") || "";

    // Elements
    const grid = document.getElementById("distributors-grid");
    const loading = document.getElementById("loading-state");
    const empty = document.getElementById("empty-state");
    const searchInput = document.getElementById("search-input");

    // Modal – ocultamos botón "Nuevo" ya que distribuidores vienen de usuarios
    const btnAdd = document.getElementById("btn-add-new");
    if (btnAdd) btnAdd.style.display = "none";

    let allDistributors = [];

    // ─── Load ────────────────────────────────────────────────────────────────
    async function loadDistributors() {
      showLoading();
      try {
        const res = await fetch(`${API_BASE}/distribuidores/list.php`, {
          headers: { Authorization: `Bearer ${token}` },
        });

        if (res.status === 401) {
          window.location.href = "/login";
          return;
        }

        const data = await res.json();
        allDistributors = Array.isArray(data) ? data : [];
        renderDistributors(allDistributors);
      } catch (err) {
        console.error("Error cargando distribuidores:", err);
        showError("Error al conectar con el servidor.");
      }
    }

    // ─── Render ───────────────────────────────────────────────────────────────
    function renderDistributors(list) {
      if (!grid || !loading || !empty) return;
      loading.style.display = "none";

      if (list.length === 0) {
        empty.style.display = "block";
        grid.style.display = "none";
        return;
      }

      empty.style.display = "none";
      grid.style.display = "grid";
      grid.innerHTML = "";

      list.forEach((d) => {
        const card = document.createElement("div");
        card.className = "distributor-card";

        const fechaVinc = d.primera_vinculacion
          ? new Date(d.primera_vinculacion).toLocaleDateString("es-CO")
          : "N/A";

        card.innerHTML = `
          <div class="card-header">
            <div>
              <h4 class="distributor-name">${escapeHtml(d.nombre)}</h4>
              <p class="distributor-nit">${escapeHtml(d.ciudad || "Ciudad no registrada")}</p>
            </div>
            <div style="display:flex;flex-direction:column;align-items:flex-end;gap:0.35rem">
              <span style="font-size:0.75rem;font-weight:600;padding:0.2rem 0.6rem;border-radius:9999px;background:rgba(66,153,225,0.15);color:#63b3ed">
                ${d.total_asesores} asesor${d.total_asesores !== 1 ? "es" : ""}
              </span>
              <span style="font-size:0.72rem;padding:0.2rem 0.6rem;border-radius:9999px;background:rgba(72,187,120,0.15);color:#68d391">
                ${d.asesores_activos} activo${d.asesores_activos !== 1 ? "s" : ""}
              </span>
            </div>
          </div>
          <div class="card-footer">
            <span class="date-info">Primera vinculación: ${fechaVinc}</span>
          </div>
        `;

        // Hacer la tarjeta clickable para abrir el popup de usuarios
        card.style.cursor = "pointer";
        card.addEventListener("click", () => {
          if (window.DistributorUsersPopup) {
            window.DistributorUsersPopup.open(d.nombre, d.ciudad);
          }
        });

        grid.appendChild(card);
      });
    }

    // ─── Search ───────────────────────────────────────────────────────────────
    if (searchInput) {
      searchInput.addEventListener("input", function () {
        const term = this.value.toLowerCase();
        const filtered = allDistributors.filter(
          (d) =>
            (d.nombre && d.nombre.toLowerCase().includes(term)) ||
            (d.ciudad && d.ciudad.toLowerCase().includes(term)),
        );
        renderDistributors(filtered);
      });
    }

    // ─── Helpers ──────────────────────────────────────────────────────────────
    function showLoading() {
      if (loading) loading.style.display = "block";
      if (grid) grid.style.display = "none";
      if (empty) empty.style.display = "none";
    }

    function showError(msg) {
      if (loading) loading.style.display = "none";
      if (grid) grid.style.display = "none";
      if (empty) {
        empty.style.display = "block";
        empty.innerHTML = `<p style="color:#fc8181">${msg}</p>`;
      }
    }

    function escapeHtml(text) {
      if (!text) return "";
      return text
        .replace(/&/g, "&amp;")
        .replace(/</g, "&lt;")
        .replace(/>/g, "&gt;")
        .replace(/"/g, "&quot;")
        .replace(/'/g, "&#039;");
    }

    // ─── Init ─────────────────────────────────────────────────────────────────
    loadDistributors();

    // Exponer para que el popup de renombrar pueda refrescar las tarjetas
    window._refreshDistributors = loadDistributors;
  })();
</script>
