---
import LayoutA from "../layouts/Layout-a.astro";
import Card from "../components/Card.astro";
import Button from "../components/Button.astro";
import Logo from "../components/Logo.astro";
---

<LayoutA title="Inicio">
  <main class="container hero-container">
    <Logo width="10em" margin="2rem auto" color="primary" />
    <Card title="Registro de Ventas">
      <p class="hero-subtitle">
        Plataforma de gestión de ventas para asesores.
      </p>
      <div class="hero-actions">
        <Button href="/login" variant="primary">Iniciar Sesión</Button>
        <Button href="/registro" variant="outline">Registrarse</Button>
      </div>
    </Card>
  </main>
</LayoutA>

<style>
  .hero-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    min-height: 100vh;
    justify-content: center;
    padding: 2rem 1rem;
    overflow: hidden; /* Prevent content from causing layout shifts */
    max-width: 100%;
  }

  .hero-subtitle {
    font-size: 1rem;
    color: var(--color-text-secondary);
    margin-bottom: 2rem;
    line-height: 1.6;
    max-width: 600px;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    width: 100%;
    max-width: 400px;
  }

  @media (max-width: 768px) {
    .hero-container {
      padding: 2rem 1.5rem;
      min-height: 100dvh; /* Use dynamic viewport height for mobile */
    }

    .hero-subtitle {
      font-size: 0.95rem;
      margin-bottom: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .hero-container {
      padding: 1.5rem 1rem;
    }

    .hero-subtitle {
      font-size: 0.875rem;
    }

    .hero-actions {
      flex-direction: column;
      width: 100%;
      max-width: 100%;
      gap: 0.75rem;
    }
  }
</style>
