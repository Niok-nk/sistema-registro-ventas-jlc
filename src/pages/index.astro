---
import LayoutA from "../layouts/Layout-a.astro";
import Card from "../components/Card.astro";
import Button from "../components/Button.astro";
import Logo from "../components/Logo.astro";

---

<LayoutA title="Inicio">
  <main class="container hero-container">

    <Logo></Logo>
    <Card title="Registro de Ventas">
      <p class="hero-subtitle">
        Plataforma de gestión de ventas para asesores.
      </p>
      <div class="hero-actions">
        <Button href="/login" variant="primary">Iniciar Sesión</Button>
        <Button href="/registro" variant="outline">Registrarse</Button>
      </div>
    </Card>
  </main>
</LayoutA>

<style>
  .hero-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }


  .hero-subtitle {
    font-size: 0.8rem;
    color: var(--color-text-secondary);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .hero-container {
      padding-top: 3rem;
      padding-bottom: 3rem;
    }


    .hero-subtitle {
      font-size: 1.125rem;
      margin-bottom: 2rem;
    }
  }

  @media (max-width: 480px) {

    .hero-actions {
      flex-direction: column;
      width: 100%;
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
